@model IEnumerable<Transportation.Application.ViewModels.TremViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Anexar Vagões</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Prefixo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OS)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Prefixo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OS)
        </td>
        <td>
            @Html.ActionLink("Edit", "ListaVagoesAnexar", new { id=item.TremId }) |
            @Html.ActionLink("Vagões Anexados", "BuscarAnexados", new { id = item.TremId })
        </td>
    </tr>
}

</table>
